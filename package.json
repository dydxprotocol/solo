{
  "name": "@dydxprotocol/solo",
  "version": "0.0.7",
  "description": "Ethereum Smart Contracts for the dYdX Solo Trading Protocol",
  "main": "dist/js/src/index.js",
  "files": [
    "dist/js/build/",
    "dist/js/src/",
    "dist/types/src/",
    "build/wrappers/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "test": "npm run deploy_test && npm run test_only",
    "build": "npm run compile && npm run copy_tew && npm run build:wrappers",
    "copy_tew": "cp node_modules/@dydxprotocol/exchange-wrappers/build/contracts/TestExchangeWrapper.json ./build/contracts/",
    "compile": "node_modules/.bin/truffle compile",
    "build:wrappers": "typechain --target=web3-1.0.0 --outDir=build/wrappers/ './build/contracts/*.json'",
    "migrate": "truffle migrate",
    "develop": "truffle develop",
    "console": "truffle console",
    "lint": "npm run lint:ts && npm run lint:sol && npm run lint:dydx",
    "lint:ts": "tslint --project . -t verbose 'src/**/*.ts'",
    "lint:sol": "solium -d contracts/",
    "lint:dydx": "python util/lintcontracts.py",
    "coverage": "./node_modules/.bin/solidity-coverage",
    "node": "ganache-cli",
    "debug": "truffle debug",
    "build:js": "rm -rf dist/ && tsc",
    "docker_node": "ganache-cli -i 1313 -d -p 8545 -h 0.0.0.0 --db=/home/.ganache -l 0x1fffffffffffff --allowUnlimitedContractSize",
    "clean_contract_json": "ts-node ./scripts/CleanBuild.ts",
    "deploy": "truffle migrate --network=$NETWORK --reset && babel-node ./scripts/save-deployed-addresses.js",
    "deploy_kovan": "NETWORK=kovan npm run deploy",
    "deploy_mainnet": "NETWORK=mainnet npm run deploy",
    "deploy_test": "npm run reset_test_evm && npm run migrate -- --network test --reset && npm run snapshot_test_evm",
    "deploy_test_ci": "WS_NODE_URI=ws://0.0.0.0:8545 npm run reset_test_evm && npm run migrate -- --network test_ci --reset && WS_NODE_URI=ws://0.0.0.0:8545 npm run snapshot_test_evm",
    "test_only": "NODE_ENV=test jest --setupFiles dotenv/config --runInBand",
    "ci_test": "NODE_ENV=test WS_NODE_URI=ws://0.0.0.0:8545 jest --setupFiles dotenv/config --runInBand",
    "reset_test_evm": "node scripts/reset-test-evm.js",
    "snapshot_test_evm": "node scripts/snapshot-test-evm.js",
    "install_compiler": "docker pull ethereum/solc:0.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dydxprotocol/solo"
  },
  "keywords": [
    "dydx",
    "ethereum"
  ],
  "author": "dYdX Trading Inc.",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/dydxprotocol/solo/issues"
  },
  "homepage": "https://github.com/dydxprotocol/solo#readme",
  "dependencies": {
    "@dydxprotocol/exchange-wrappers": "0.0.6",
    "bignumber.js": "^8.0.2",
    "openzeppelin-solidity": "2.1.1",
    "web3": "1.0.0-beta.37",
    "web3-utils": "^1.0.0-beta.37"
  },
  "devDependencies": {
    "@types/es6-promisify": "^6.0.0",
    "@types/jest": "^23.3.12",
    "@types/web3": "^1.0.14",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "dotenv": "^6.2.0",
    "es6-promisify": "^6.0.1",
    "ethlint": "^1.2.2",
    "ganache-cli": "^6.2.5",
    "jest": "^23.6.0",
    "mocha-junit-reporter": "^1.18.0",
    "solidity-coverage": "^0.5.11",
    "truffle": "^5.0.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-no-focused-test": "^0.5.0",
    "typechain": "^0.3.11",
    "typescript": "^3.2.2"
  }
}
